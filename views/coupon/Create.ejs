<form action="/create" method="POST" onsubmit="submitForm(this);return false">
  <div class="columns">
    <div class="column">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" placeholder="Text input" name="title" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Restaurant</label>
        <div class="control">
          <input class="input" type="text" placeholder="Text input" name="restaurant" required>
        </div>
      </div>

      <div class="columns">
        <div class="column">
          <div class="field">
            <label class="label">Region</label>
            <div class="control">
              <div class="select">
                <select name="region">
                  <option>HK Island</option>
                  <option>Kowloon</option>
                  <option>New Territories</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="column">
          <div class="field">
            <label class="label">Mall</label>
            <div class="control">
              <div class="select">
                <select name="mall">
                  <option>IFC Mall</option>
                  <option>Pacific Place</option>
                  <option>Times Square</option>
                  <option>Elements</option>
                  <option>Harbour City</option>
                  <option>Festival Walk</option>
                  <option>MegaBox</option>
                  <option>APM</option>
                  <option>New Town Plaza</option>
                  <option> Tsuen Wan Plaza</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="field">
        <label class="label">Image</label>
        <div class="control">
          <input class="input" type="text" placeholder="Text input" name="image" >
        </div>
      </div>
    </div>
    <div class="column">
      <div class="field">
        <label class="label">Quota</label>
        <div class="control">
          <input class="input" type="number" placeholder="Text input" name="quota" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Coins</label>
        <div class="control">
          <input class="input" type="number" placeholder="Text input" name="coins" required>
        </div>
      </div>

        <div class="field">
          <label class="label">Deal Valid Till</label>
          <div class="control">
            <input class="input" type="date" placeholder="Text input" name="date" required>
          </div>
          </div>

          <div class="field">
            <label class="label">Detail</label>
            <div class="control">
              <textarea class="textarea " placeholder="" rows="3" name="detail"></textarea>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <p class="control">
                <button class="button is-success">
                  Submit
                </button>
              </p>
            </div>
          </div>
        </div>

      </div>
</form>

<script>
  async function submitForm(formElem) {

    var r = confirm("Confirm Create?");
        
        if (r) {
            var response = await fetch("/coupon" , {
                method: "POST",
                body: new FormData(formElem),
            });

            if (response.ok) {
              alert("Coupon created.");
              location.assign("/");
            } else {
                alert(response.status + ": " + response.statusText);
            }

        } else {
            alert("cancelled");
        }
  };
</script>